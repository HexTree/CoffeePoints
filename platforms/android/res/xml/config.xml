<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kaustgreengroup.sustainabilityapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <name>Sustainability App</name>
    <description>
        An app that is part of a movement to promote sustainabilty at KAUST.
        This app is part of a challenge and is designed for KAUST Resedents only.
        It let's you collect sustainability points by scanning a specific barcode.
    </description>
    <author email="greengroup@kaust.edu.sa" href="https://www.facebook.com/KAUSTGreenGroup/?fref=ts">
        KAUST Green Group
    </author>
    <content src="index.html" />
    <access origin="https://*.google.com/*" />
    <access origin="https://apis.google.con/js/api.js" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access launch-external="yes" origin="https://*.google.com/*" />
    <allow-intent href="https://*.google.com/*" />
    <allow-navigation href="https://*.google.com/*" />
    <allow-intent href="market:*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
